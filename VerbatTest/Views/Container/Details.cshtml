@model VerbatTest.Models.Container

@{
    ViewBag.Title = "Details";
}
<div class="container " style="max-width:700px;">
    <div class="card" style="width:500px">
        <div class="card-header bg-opacity-100 text-bg-dark">
            <h3>Container Detail</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <td><b>Container Number</b></td>
                    <td>@Html.DisplayFor(model => model.ContainerNumber)</td>
                </tr>
                <tr>
                    <td><b>Shipment Date</b></td>
                    <td> @Html.DisplayFor(model => model.ShipmentDate)</td>
                </tr>
                <tr>
                    <td><b>Origin Port</b></td>
                    <td> @Html.DisplayFor(model => model.OriginPort)</td>
                </tr>
                <tr>
                    <td><b>Destination Port</b></td>
                    <td>@Html.DisplayFor(model => model.DestinationPort)</td>
                </tr>
                <tr>
                    <td><b>Status </b></td>
                    <td>@Html.DisplayFor(model => model.Status)</td>
                </tr>
                <tr>
                    <td><b>File Name</b></td>
                    <td>@Html.DisplayFor(model => model.FilePath)</td>
                </tr>
            </table>
        </div>
    </div>
    
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
