@model VerbatTest.Models.User
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container" style="max-width:500px;">
        <div class="card">
            <div class="card-header bg-opacity-100 text-bg-dark">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-5 mb-3">
                        <div class="form-group">
                            <label class="control-label">User Name</label>
                        </div>
                    </div>
                    <div class="col-5 mb-3">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control col-md-4" })
                            @Html.ValidationMessageFor(m => m.Username)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-5 mb-3">
                        <div class="form-group">
                            <label class="control-label">Password</label>
                        </div>
                    </div>
                    <div class="col-5 mb-3">
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-4" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="h-100 d-flex align-items-center justify-content-center">
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark rounded-0">Login</button>
                        </div>
                </div>
            </div>
        </div>
    </div>

}

